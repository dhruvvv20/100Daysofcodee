//Q120: Write a program to take a string input. Change it to sentence case.

#include <stdio.h>
#include <ctype.h>
#include <string.h>
int main() {
    char str[1000];
    fgets(str, sizeof(str), stdin);
    int len = strlen(str);
    int capitalizeNext = 1;  
    for (int i = 0; i < len; i++) {
        if (isspace(str[i])) {
            capitalizeNext = 1;  
        } else if (capitalizeNext && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            capitalizeNext = 0;
        } else {
            str[i] = tolower(str[i]);  
        }
    }
    printf("%s", str);
    return 0;
}
